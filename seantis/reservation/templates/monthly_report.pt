<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="seantis.reservation"
      lang="en">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        
        <h1 class="documentFirstHeading" tal:content="view/title"></h1>
        
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="monthly-report-navigation">
            <a tal:attributes="href view/backward_url" i18n:translate="">&lt;&lt; Previous Month</a> | <a tal:attributes="href view/forward_url" i18n:translate="">Next Month &gt;&gt;</a>
        </div>

        <div class="monthly-report" tal:define="results view/results">
            <div class="day" tal:repeat="day results">
                
                <h2 tal:content="python: view.format_day(day)"></h2>

                <tal:block repeat="resource python: results[day].values()">
                    <div class="resource" tal:condition="python: view.has_reservations(resource)">

                        <h3>
                            <a tal:attributes="href resource/url" tal:content="resource/title"></a>
                        </h3>

                        <tal:block repeat="rtype python: resource['lists']">

                            <div tal:attributes="class python: 'reservation-type ' + rtype" tal:condition="python: resource[rtype]">
                                <div class="reservation-header">
                                    <div class="leftcolumn">
                                        <h4 tal:content="python: resource['lists'][rtype]"></h4>
                                    </div>
                                    <div class="rightcolumn">
                                        <div class="timetable-wrapper" tal:attributes="
                                            data-min_hour view/min_hour;
                                            data-max_hour view/max_hour;
                                        "></div>
                                    </div>
                                    <div style="clear:both;"></div>
                                </div>

                                <tal:block repeat="reservation python: resource[rtype]">
                                    <div tal:attributes="
                                        class python: (repeat['reservation'].odd() and 'reservation odd' or 'reservation even') + (view.show_details and ' show-details' or '')
                                    ">
                                    <div class="reservation-summary">
                                        <div class="leftcolumn">
                                            <a tal:attributes="href python: 'mailto:' + reservation['email']" tal:content="reservation/email"></a>
                                        </div>
                                        <div class="rightcolumn">
                                            <div class="timetable-wrapper" tal:attributes="
                                                data-min_hour view/min_hour;
                                                data-max_hour view/max_hour;
                                                data-show_header string:false;
                                                data-timespans reservation/timespans;
                                            "></div>
                                        </div>
                                        <div style="clear:both;"></div>
                                    </div>
                                    <div class="reservation-detail" tal:define="data reservation/data">
                                        <div class="leftcolumn">
                                            <metal:block use-macro="python: path(view.data_macro_path)"/>
                                        </div>

                                        <div class="rightcolumn">
                                            <div class="reservation-urls">
                                                <tal:block repeat="url reservation/urls">
                                                    <a 
                                                        tal:attributes="href python: url[1]"
                                                        tal:content="python: url[0]"
                                                    >
                                                    </a>
                                                </tal:block>
                                            </div>
                                        </div>

                                        <div style="clear:both"></div>
                                    </div>
                                </div>
                                </tal:block>
                            </div>

                        </tal:block>
                    </div>
                </tal:block>
            </div>
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />
    </tal:main-macro>
</metal:main>

</body>
</html>