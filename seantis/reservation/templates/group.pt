<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="seantis.dir.facility">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <a tal:attributes="href python: context.absolute_url() + '?reset=true'"><h1 class="documentFirstHeading" tal:content="view/group" /></a>
        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div tal:repeat="alloc view/allocations">

          <div style="float: left; width:75px; margin-bottom: 10px;" tal:content="python: alloc.display_start.strftime('%d.%m.%Y')"></div>
            <div tal:attributes="class python: 'fc-event fc-event-inner fc-event-skin groupEvent ' + view.event_class(alloc)">
              <div style="text-align: center;">
              <span class="fc-event-time">
                <tal:block tal:content="python: alloc.display_start.strftime('%H:%M')" />
                &nbsp;-&nbsp;
                <tal:block tal:content="python: alloc.display_end.strftime('%H:%M')" />
              </span>
              <span class="fc-event-title" tal:content="python: view.event_title(alloc)"></span>
              </div>
            </div>

            <div style="clear:both;"></div>
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />
    </tal:main-macro>
</metal:main>

</body>
</html>