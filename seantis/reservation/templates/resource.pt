<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"

      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="seantis.reservation"

      xml:lang="en" lang="en">

<body>

<metal:block metal:fill-slot="javascript_head_slot">
    <tal:block tal:replace="structure view/javascript" />
</metal:block>

<metal:block metal:fill-slot="style_slot">
  <style type="text/css">
    .calendarOccupied {
        background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABoAAAAaCAMAAACelLz8AAAAOVBMVEXY2Nj////d7h7d7h7d7h7d7h7///////////////////////////////////////////////////+4yo5sAAAAQklEQVQoke3LqQ3AMADAQKP8b/cftjjAUgaI6cmEmHKprY+59seRSkAlopJQyagUVCoqDZWOykBlorJQ2aj48+Rafr0hD9knm0tJAAAAAElFTkSuQmCC) !important;
        background-repeat: repeat;
        border: solid #ccc 1px;
    }
    .groupSelection {
      -webkit-box-shadow: 0px 0px 4px 4px #6DADF2;
      -moz-box-shadow: 0px 0px 4px 4px #6DADF2;
      box-shadow: 0px 0px 4px 4px #6DADF2; 
    }

    #miniTip_c {
        padding: 0;
    }

    #miniTip_c div {
        background-color: #1d4f90;
        padding: 2px 0px;
        padding-left: 10px;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
    }

    /* main content style */
    #miniTip_c a { 
        padding-bottom: 2px;
        padding-top: 2px;
        display: block;
        padding-left: 24px;
    }

    #miniTip_c a:hover {
        background-color: #0d7dcd;
        text-decoration: none;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
    }

    #miniTip_c a:hover:before {
        content: 'â–¶ ';
        margin-left: -14px;
        margin-right: 0px;
        padding-left: 0px;
        padding-right: 0px;
    }

    #miniTip_c {
        width: 100px;
    }
  </style>
</metal:block>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="documentContent">
            <tal:block condition="python: view.calendar_count == 1" repeat="resource view/resources">
                <h1 class="documentFirstHeading" tal:content="python: resource.parent().title + ' - ' + resource.title"></h1>
                <p tal:content="resource/description" />

                <div tal:attributes="id resource/calendar_id"></div>
            </tal:block>

            <tal:block tal:condition="python: view.calendar_count > 1" tal:repeat="resource view/resources">
                <div style="float: left; width: 45%; margin-right: 5%;">
                    <h1 class="documentFirstHeading" tal:content="python: resource.parent().title + ' - ' + resource.title"></h1>
                    <p tal:content="resource/description" />
                    <div tal:attributes="id resource/calendar_id"></div>
                </div>

                <div tal:condition="repeat/resource/odd" style="clear: both;"></div>
                
            </tal:block>
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>

</html>