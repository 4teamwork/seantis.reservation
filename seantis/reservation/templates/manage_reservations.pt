<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="seantis.reservation"
>

<body>
<metal:main fill-slot="main">
<tal:main-macro metal:define-macro="main">
      
<h1 class="documentFirstHeading" tal:content="view/title"/>
<div id="reservation-info">
    <tal:block tal:repeat="group python: view.reservations().items()">
        
        <div class="reservation">
            <div class="reservation-title">
                
                <h3 tal:content="python: group[0]"></h3>

                <a 
                    tal:attributes="href python: view.remove_all_url(group)"
                    class="reservation-delete" i18n:translate="">
                    Delete
                </a>
            </div>
            <div tal:repeat="reservation python: group[1]" class="reservation-list">
                
                <span tal:content="python: view.display_start(reservation[2])"/>
                &nbsp;-&nbsp;
                <span tal:content="python: view.display_end(reservation[3])"/>
                
                <a 
                    tal:attributes="href python: view.remove_part_url(reservation)" 
                    class="reservation-delete" i18n:translate="">
                    Delete
                </a>
            </div>
        </div>

    </tal:block>
</div>
</tal:main-macro>
</metal:main>
</body>
</html>
