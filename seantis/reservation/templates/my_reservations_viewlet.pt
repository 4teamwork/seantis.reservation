<div xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="seantis.reservation"
      tal:condition="viewlet/available"
      class="my-reservations"
>

<h2 i18n:translate="">My reservations</h2>

<ul>
	<li tal:repeat="reservation viewlet/reservation_data">
		<span tal:content="reservation/title"></span><br/>
		<span tal:content="reservation/time"></span>
	</li>
</ul>

<div>
	<script type="text/javascript">
		(function($) {
    		$(document).ready(function() {
    			var options = {
	            	config: {
	                	onClose: function() {
	                    	window.location.reload();
	                	},
	            	}
	            };
				reservation_overlay_init($('.my_reservations_link'), options);
			});
		})(jQuery);
	</script>
	<a tal:attributes="href viewlet/finish_url" i18n:translate="" class="my_reservations_link">finish</a>
</div>

</div>